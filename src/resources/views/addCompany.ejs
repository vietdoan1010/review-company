                        <label>Chuyên mục</label>
                        <br>
                        <select name="box" id="cate" class="formcontro">
                                <option value="1">Sugar Baby</option>
                                <option value="2">Thiết kế đồ họa</option>
                                <option value="3">Mạng máy tính</option>
